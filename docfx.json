{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "Gasimo.*.csproj"
          ]
        }
      ],
      "filter": "filterConfig.yml",
      "dest": "api",
      "properties": {
        "DefineConstants": "TIMELINE_PRESENT"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/gasimo"
    ],
    "globalMetadata": {
      "_appTitle": "Subtitler",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/logo.svg",
      "_enableSearch": true,
      "_disableContribution": true,
      "_disableNextArticle": true,
      "pdf": false
    }
  }
}